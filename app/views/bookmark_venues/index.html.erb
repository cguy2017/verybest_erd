<div class="page-header">
  <h1>
    Bookmark venues
    <a href="/bookmark_venues/new" class="btn btn-lg btn-success">New Bookmark venue</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Dishes</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @bookmark_venues.each do |bookmark_venue| %>
      <tr>
        <td>
          <% if bookmark_venue.dishes.present? %>
            <a href="/dishes/<%= bookmark_venue.dishes.id %>">
              <%= bookmark_venue.dishes.cuisines_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bookmark_venue.user.present? %>
            <a href="/user_accounts/<%= bookmark_venue.user.id %>">
              <%= bookmark_venue.user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/bookmark_venues/<%= bookmark_venue.id %>" class="btn btn-primary">Show</a>
          <a href="/bookmark_venues/<%= bookmark_venue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bookmark_venue/<%= bookmark_venue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bookmark_venues, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
