<!-- Validation failure messages -->
<% if @bookmark_venue.errors.any? %>
  <% @bookmark_venue.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bookmark Venue</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bookmark_venue" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dishes_id -->
      <div class="form-group">
        <label for="dishes_id" class="control-label">
          Dishes
        </label>

        <%= select_tag(:dishes_id, options_from_collection_for_select(Dish.all, :id, :cuisines_id, @bookmark_venue.dishes_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(UserAccount.all, :id, :created_at, @bookmark_venue.user_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Bookmark Venue
      </button>
      or
      <a href="/bookmark_venues">Cancel</a>
    </form>
  </div>
</div>
