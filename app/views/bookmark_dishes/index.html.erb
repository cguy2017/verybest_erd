<div class="page-header">
  <h1>
    Bookmark dishes
    <a href="/bookmark_dishes/new" class="btn btn-lg btn-success">New Bookmark dish</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Venues</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @bookmark_dishes.each do |bookmark_dish| %>
      <tr>
        <td>
          <% if bookmark_dish.venues.present? %>
            <a href="/venues/<%= bookmark_dish.venues.id %>">
              <%= bookmark_dish.venues.dishes_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bookmark_dish.user.present? %>
            <a href="/users/<%= bookmark_dish.user.id %>">
              <%= bookmark_dish.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/bookmark_dishes/<%= bookmark_dish.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == bookmark_dish.user %>
            <a href="/bookmark_dishes/<%= bookmark_dish.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bookmark_dish/<%= bookmark_dish.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bookmark_dishes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
