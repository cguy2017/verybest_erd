<!-- Validation failure messages -->
<% if @bookmark_dish.errors.any? %>
  <% @bookmark_dish.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bookmark Dish</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bookmark_dish" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venues_id -->
      <div class="form-group">
        <label for="venues_id" class="control-label">
          Venues
        </label>

        <%= select_tag(:venues_id, options_from_collection_for_select(Venue.all, :id, :dishes_id, @bookmark_dish.venues_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Create Bookmark Dish
      </button>
      or
      <a href="/bookmark_dishes">Cancel</a>
    </form>
  </div>
</div>
